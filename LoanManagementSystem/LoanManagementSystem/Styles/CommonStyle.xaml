    <Style x:Key="bgDark" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="#FF3e6b85"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    <Style x:Key="{x:Type GroupBox}" TargetType="GroupBox">
        <Setter Property="Padding" Value="5" />
